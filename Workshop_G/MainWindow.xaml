<Window x:Class="Workshop_G.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop_G"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="input" Text="Votre text ici" HorizontalAlignment="Left" Height="38" Margin="50,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="output" HorizontalAlignment="Left" Height="38" Margin="150,50,0,0" TextWrapping="Wrap" Text="Resultat" VerticalAlignment="Top" Width="85" TextChanged="TextBox_TextChanged_1" IsEnabled="False"/>
        <Button x:Name="send" Content="Button" HorizontalAlignment="Left" Margin="50,103,0,0" Width="185" VerticalAlignment="Top"/>

    </Grid>
</Window>
